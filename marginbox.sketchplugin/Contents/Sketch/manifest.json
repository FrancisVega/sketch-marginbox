{
    "name": "Marginbox",
    "description": "Marginbox",
    "author": "Francis Vega",
    "author": "hisconer@gmail.com",
    "homepage": "",
    "version": 0.1,
    "identifier": "com.example.sketch.marginbox",
    "compatibleVersion": "4.2",
    "bundleVersion": 1,
    "commands": [
        {
            "description": "Add margin data to layer",
            "icon":"icons/data-icon.png",
            "name": "Add margin data to layer",
            "identifier": "addmargindata",
            "handler": "onRun",
            "shortcut": "ctrl alt m",
            "script": "addMarginDataToLayer.js"
        },
        {
            "description": "Add marginbox layer to selected group(s)",
            "icon":"icons/add-icon.png",
            "name": "Add Margin Box",
            "identifier": "adjustmarginbox",
            "handler": "onRun",
            "shortcut": "cmd shift m",
            "script": "marginbox.js"
        },
        {
            "description": "Toggle the visibility of margin box layer within selected group(s)",
            "icon":"icons/toggle-icon.png",
            "name": "Toggle Margin Box",
            "identifier": "togglemarginbox",
            "handler": "onRun",
            "shortcut": "ctrl alt cmd m",
            "script": "togglemarginbox.js"
        }
    ],
    "menu": {
        "title": "MarginBox",
        "items": [
            "addmargindata",
            "adjustmarginbox",
            "togglemarginbox"
        ]
    }
}
